 @model Product 
 <div class="card mb-2">
            <img class="card-img-top" src="~/img/@Model.ImageUrl" alt=""> @*Model.Imageurl yazdım product clastaki yeri çünkü artık burasıda dinamik*@
            <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
            <a href="/product/details/@Model.ProductId" class="btn btn-primary btn-sm">İncele</a> 
            <a href="/product/edit/@Model.ProductId" class="btn btn-primary btn-sm">Edit</a>   
  
            </div>
   </div>